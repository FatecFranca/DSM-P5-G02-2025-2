{
  "name": "backend-node",
  "version": "1.0.0",
  "description": "Back-end Node.js para integração com câmera mobile e API Flask",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon --exec ts-node server.ts",
    "build": "tsc && xcopy config dist\\config /E /I /Y",
    "pm2:start": "pm2 start --interpreter ts-node server.ts --name backend-node",
    "pm2:stop": "pm2 stop backend-node",
    "pm2:restart": "pm2 restart backend-node",
    "pm2:delete": "pm2 delete backend-node",
    "pm2:logs": "pm2 logs backend-node"
  },
  "dependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.5.2",
    "axios": "^1.5.0",
    "bcryptjs": "^3.0.2",
    "express": "^4.18.2",
    "firebase-admin": "^13.5.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.18.2",
    "multer": "^1.4.5-lts.1",
    "socket.io": "^4.7.2",
    "swagger-autogen": "^2.23.7",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "ts-node": "^10.9.2"
  },
  "devDependencies": {
    "@openapitools/openapi-generator-cli": "^2.24.0",
    "@types/multer": "^2.0.0",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "nodemon": "^3.1.10"
  }
}
