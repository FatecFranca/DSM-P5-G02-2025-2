{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "moduleResolution": "node"
  },
  "include": ["**/*.ts", "server.js", "routes/auth.routes.ts", "routes/dashboard.routes.ts", "routes/detection.routes.ts"],
  "exclude": ["node_modules", "dist"]
}